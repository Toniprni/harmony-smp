<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern"
                   value="%d{ISO8601}{Europe/Brussels} [%X{user}] [%X{requestId}] %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <appender name="SecurityLogFile" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true" />
        <param name="maxFileSize" value="5MB" />
        <param name="File" value="${logFolder}/bdmsl-security.log" />
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern"
                   value="%d{ISO8601}{Europe/Brussels} [%X{user}] [%X{requestId}] %-5p - %m%n" />
        </layout>
    </appender>

    <appender name="BusinessLogFile" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true" />
        <param name="maxFileSize" value="5MB" />
        <param name="File" value="${logFolder}/bdmsl-business.log" />
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern"
                   value="%d{ISO8601}{Europe/Brussels} [%X{user}] [%X{requestId}] %-5p - %m%n" />
        </layout>
    </appender>

    <appender name="MainLogFile" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true" />
        <param name="maxFileSize" value="5MB" />
        <param name="File" value="${logFolder}/bdmsl.log" />
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern"
                   value="%d{ISO8601}{Europe/Brussels} [%X{user}] [%X{requestId}] %-5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <root>
        <level value="INFO" />
        <appender-ref ref="MainLogFile" />
        <appender-ref ref="console" />
    </root>

    <category name="eu.europa.ec.cipa.common.logging.impl.LoggerSecurityImpl">
        <priority value="DEBUG" />
        <appender-ref ref="SecurityLogFile" />
    </category>

    <category name="eu.europa.ec.cipa.common.logging.impl.LoggerBusinessImpl">
        <priority value="DEBUG" />
        <appender-ref ref="BusinessLogFile" />
    </category>

    <category name="eu.europa.ec.cipa">
        <priority value="DEBUG" />
    </category>

</log4j:configuration>
