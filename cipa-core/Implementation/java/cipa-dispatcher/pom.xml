		<dependency>
			<groupId>org.glassfish.hk2.external</groupId>
			<artifactId>asm-all-repackaged</artifactId>
			<version>2.2.0-b14</version>
		</dependency>
		<dependency>
			<groupId>eu.europa.ec.cipa</groupId>
			<artifactId>cipa-smp-client-library</artifactId>
			<version>${cipa.version}</version>
		</dependency>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>18.0</version>
		</dependency>
		<dependency>
			<groupId>eu.domibus</groupId>
			<artifactId>domibus-ebms3</artifactId>
			<version>${domibus.version}</version>
		</dependency>
		<dependency>
			<groupId>eu.domibus</groupId>
			<artifactId>domibus-common</artifactId>
			<version>${domibus.version}</version>
