<?xml version="1.0"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>eu.europa.ec.digit.domibus</groupId>
    <artifactId>domibus-app</artifactId>
    <version>1.0.0-alpha-1</version>
  </parent>

  <artifactId>domibus-endpoint</artifactId>
  <name>domibus-endpoint</name>
  <packaging>war</packaging>

  <build>
    <finalName>domibus-app</finalName>
    <plugins>
      <!-- Unpacking WSDLs with XSDs from domibus-jaxb package to WEB-INF folder -->
      <!-- in order to make it available to JBoss JAX-WS -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.10</version>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeGroupIds>eu.europa.ec.digit.domibus</includeGroupIds>
              <includeArtifactIds>domibus-jaxb</includeArtifactIds>
              <overWrite>true</overWrite>
              <outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF</outputDirectory>
              <includes>**/*.wsdl,**/*.xsd</includes>
              <excludes>**/*.class</excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>eu.europa.ec.digit.domibus</groupId>
      <artifactId>domibus-domain</artifactId>
      <version>${domibus.app.version}</version>
    </dependency>

    <dependency>
      <groupId>eu.europa.ec.digit.domibus</groupId>
      <artifactId>domibus-common</artifactId>
      <version>${domibus.app.version}</version>
    </dependency>

    <dependency>
      <groupId>eu.europa.ec.digit.domibus</groupId>
      <artifactId>domibus-facade</artifactId>
      <version>${domibus.app.version}</version>
    </dependency>
  </dependencies>

</project>
