<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "log4j.dtd" "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- console appender -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <param name="Threshold" value="debug" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                value="%d{HH:mm:ss,SSS} %-5p %c{1} - %m%n" />
        </layout>
    </appender>

    <!-- file appender that accepts all log message -->
    <appender name="trace-file"
        class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/domibus-app-trace.log" />
        <param name="MaxFileSize" value="100MB" />
        <param name="MaxBackupIndex" value="3" />
        <param name="Threshold" value="all" />
        <param name="Append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{ISO8601} [%t] %c#%M:%L - %m%n" />
        </layout>
    </appender>

    <!-- file appender that only accepts exceptional log messages -->
    <appender name="warn-file"
        class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/domibus-app-warn.log" />
        <param name="MaxFileSize" value="100MB" />
        <param name="MaxBackupIndex" value="3" />
        <param name="Threshold" value="warn" />
        <param name="Append" value="true" />
        <!-- WARNING: do not use the pattern below in production because it degrades performance -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{ISO8601} [%t] %c#%M:%L - %m%n" />
        </layout>
    </appender>

    <appender name="debug-file"
        class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/domibus-app-debug.log" />
        <param name="MaxFileSize" value="100MB" />
        <param name="MaxBackupIndex" value="3" />
        <param name="Threshold" value="debug" />
        <param name="Append" value="true" />
        <!-- WARNING: do not use the pattern below in production because it degrades performance -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{ISO8601} [%t] %c#%M:%L - %m%n" />
        </layout>
    </appender>

    <appender name="error-file"
        class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="logs/domibus-app-error.log" />
        <param name="MaxFileSize" value="100MB" />
        <param name="MaxBackupIndex" value="5" />
        <param name="Threshold" value="error" />
        <param name="Append" value="true" />
        <!-- WARNING: do not use the pattern below in production because it degrades performance -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{ISO8601} [%t] %c#%M:%L - %m%n" />
        </layout>
    </appender>

    <logger name="eu">
        <level value="error" />
    </logger>

    <logger name="org.springframework">
        <level value="debug" />
    </logger>

    <logger name="org.springframework.dao">
        <level value="error" />
    </logger>

    <logger name="org.springframework.jdbc">
        <level value="debug" />
    </logger>

    <logger name="org.springframework.web">
        <level value="error" />
    </logger>

    <logger name="org.springframework.beans">
        <level value="error" />
    </logger>
    
    <logger name="org.springframework.transaction">
        <level value="error" />
    </logger>

    <logger name="org.springframework.js">
        <level value="error" />
    </logger>

    <logger name="org.apache">
        <level value="error" />
    </logger>

    <logger name="eu.europa.ec.digit.domibus">
        <level value="debug" />
    </logger>

    <root>
        <priority value="debug" />
        <appender-ref ref="console" />
        <appender-ref ref="trace-file" />
        <appender-ref ref="warn-file" />
        <appender-ref ref="debug-file" />
        <appender-ref ref="error-file" />
    </root>

</log4j:configuration>
