<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ns2:ContextValueAssociation name="BIIRULES-T15-codes" xmlns:ns2="http://docs.oasis-open.org/codelist/ns/ContextValueAssociation/1.0/">
  <ValueLists>
    <ValueList uri="CountryIdentificationCode.gc" xml:id="CountryIdentificationCode" />
    <ValueList uri="CurrencyCode.gc" xml:id="CurrencyCode" />
    <ValueList uri="PaymentMeansCode.gc" xml:id="PaymentMeansCode" />
    <ValueList uri="TaxCategoryID.gc" xml:id="TaxCategoryID" />
    <ValueList uri="TaxSchemeID.gc" xml:id="TaxSchemeID" />
  </ValueLists>
  <Contexts>
    <Context address="cbc:DocumentCurrencyCode" mark="fatal" values="CurrencyCode">
      <Message>[CL-015-002]-DocumentCurrencyCode MUST be coded using ISO code list 4217</Message>
    </Context>
    <Context address="@currencyID" mark="fatal" values="CurrencyCode">
      <Message>[CL-015-003]-currencyID MUST be coded using ISO code list 4217</Message>
    </Context>
    <Context address="cac:Country/cbc:IdentificationCode" mark="fatal" values="CountryIdentificationCode">
      <Message>[CL-015-004]-Country codes in an invoice MUST be coded using ISO code list 3166-1</Message>
    </Context>
    <Context address="cac:TaxScheme/cbc:ID" mark="warning" values="TaxSchemeID">
      <Message>[CL-015-005]-Invoice tax schemes MUST be coded using UN/ECE 5153 code list</Message>
    </Context>
    <Context address="cac:PaymentMeans/cbc:PaymentMeansCode" mark="warning" values="PaymentMeansCode">
      <Message>[CL-015-006]-Payment means in an invoice MUST be coded using CEFACT code list 4461</Message>
    </Context>
    <Context address="cac:TaxCategory/cbc:ID" mark="warning" values="TaxCategoryID">
      <Message>[CL-015-007]-Invoice tax categories MUST be coded using UN/ECE 5305 code list</Message>
    </Context>
  </Contexts>
</ns2:ContextValueAssociation>
