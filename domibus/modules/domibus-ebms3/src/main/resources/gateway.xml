            </fromParties>
            <fromRole>...</fromRole>
            <toParties>
              <party type="">...</party>
              <party type="">...</party>
            </toParties>
            <toRole>...</toRole>
            <agreementRef>...</agreementRef>
            <pmode>...</pmode>
            <service>...</service>
            <action>...</action>
            <conversationId>...</conversationId>
            <messageProperties>
              <property name="">...</party>
              <property name="">...</party>
            </messageProperties>
            -->
        </filter>
        <consumer className="org.autotech.AutotechEbms3Service"/>
    </consumption>

</gateway>