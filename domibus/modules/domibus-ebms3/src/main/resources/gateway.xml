<gateway>

    <consumption>
        <filter>
            <service>http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/service</service>
            <action>http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/test</action>
        </filter>
        <consumer className="eu.domibus.ebms3.consumers.PingConsumer">
            <parameter name="log.push">true</parameter>
            <parameter name="log.pull">true</parameter>
        </consumer>
    </consumption>

    <consumption>
        <consumer className="eu.domibus.backend.consumer.BackendConsumer">
            <!-- a parameter to indicate to the consumer application "ConsumerTest"
                 where to save the attachment in the request. The value could be
                 either an absolute path or relative to the "Received_Messages_Folder"
                 (directory where the MSH saves attachments of the received messages) -->
            <parameter name="directory">Messages</parameter>
        </consumer>
    </consumption>

    <consumption>
        <filter>
            <mpc>shipment</mpc>
