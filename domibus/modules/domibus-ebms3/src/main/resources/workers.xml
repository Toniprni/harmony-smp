    <Worker name="pmodesWatcher" interval="20000" activate="true"
            workerClass="eu.domibus.ebms3.workers.impl.PModesWatcher">
        <parameter name="pmodesDir">../../../../config/pmodes</parameter>
    </Worker>

    <!-- The "submitWorker" accepts messages in the folder domibus/store/send -->
    <Worker name="submitWorker" interval="5000" activate="true"
            workerClass="eu.domibus.ebms3.workers.impl.SubmitWorker"/>

    <!-- The "retransmitWorker" triggers retransmits of user messages (AS4 Reliability) -->
    <Worker name="retransmitWorker" interval="10000" activate="true"
            workerClass="eu.domibus.ebms3.workers.impl.AS4RetransmissionWorker"/>

    <!-- The "senderWorker" retransmits user messages (AS4 Reliability) -->
    <Worker name="senderWorker" interval="20000" activate="true"
            workerClass="eu.domibus.ebms3.workers.impl.SenderWorker"/>

    <!-- The "receiptSenderWorker" sends call-back receipts (AS4 reliability) -->
    <Worker name="receiptSenderWorker" interval="6000" activate="true"
            workerClass="eu.domibus.ebms3.workers.impl.ReceiptSender"/>

    <!-- The "shutdownWorker" finalizes timed out time schedules (AS4 reliability) -->
    <Worker name="shutdownWorker" interval="120000" activate="true"
            workerClass="eu.domibus.ebms3.workers.impl.AS4ShutdownIntervalWorker"/>

</Workers>