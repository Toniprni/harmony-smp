<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>tomcat-full</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory></baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/sql/hibernate3/</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <outputDirectory>domibus/sql-scripts</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
            <!-- excludes/ -->
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <!-- directory/ -->
            <lineEnding>unix</lineEnding>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/domibus-config/delta_scripts/</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <outputDirectory>domibus/sql-scripts/delta_scripts</outputDirectory>
            <!-- excludes/ -->
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <!-- directory/ -->
            <lineEnding>unix</lineEnding>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/artifacts/tomcat</directory>
            <outputDirectory>domibus</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>work</exclude>
                <exclude>${domibus.module.backend.messagesFolder}/**/*</exclude>
                <exclude>${domibus.module.ebms3.submittedMessagesFolder}/**/*</exclude>
                <exclude>${domibus.module.ebms3.receivedMessagesFolder}/**/*</exclude>
                <exclude>logs/**/*</exclude>
                <exclude>temp/**/*</exclude>
                <exclude>webapps/cargocpc/**/*</exclude>
                <exclude>webapps/domibus/**/*</exclude>
                <exclude>conf/Catalina/**/*</exclude>
                <exclude>conf/domibus/**/*</exclude>
            </excludes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/artifacts/tomcat</directory>
            <outputDirectory>domibus</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>${domibus.module.backend.messagesFolder}</include>
                <include>${domibus.module.ebms3.submittedMessagesFolder}</include>
                <include>${domibus.module.ebms3.receivedMessagesFolder}</include>
                <include>logs</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/artifacts/tomcat/conf</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <outputDirectory>domibus/conf</outputDirectory>
            <excludes>
                <exclude>**/*.jks</exclude>
                <exclude>domibus/pmodes/*.xml</exclude>
                <exclude>domibus/security-config.xml</exclude>
            </excludes>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <!-- directory/ -->
            <!-- lineEnding>unix</lineEnding -->
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${project.build.finalName}.war</source>
            <outputDirectory>domibus/webapps</outputDirectory>
            <destName>${project.build.finalName}.war</destName>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.build.directory}/../../../changelog.txt</source>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.build.directory}/../../../known_issues.txt</source>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.build.directory}/../../../upgrade_info.txt</source>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>manual/Installation_Instructions.pdf</source>
            <outputDirectory>/</outputDirectory>
            <destName>Installation_Instructions.pdf</destName>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>