<gateway>

    <!-- Consume EBMS3/AS4 service/test messages -->
    <consumption>
        <filter>
            <service>http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/service</service>
            <action>http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/test</action>
        </filter>
        <consumer className="eu.domibus.ebms3.consumers.PingConsumer">
            <parameter name="log.push">true</parameter>
            <parameter name="log.pull">true</parameter>
        </consumer>
    </consumption>

    <!-- Consume self-test messages -->
    <consumption>
        <filter>
            <service>http://www.e-codex.eu/2013/self-test-service</service>
            <action>http://www.e-codex.eu/2013/self-test-action</action>
        </filter>
        <consumer className="eu.domibus.ebms3.consumers.impl.SaveToFolder">
            <parameter name="directory">Messages</parameter>
        </consumer>
    </consumption>

    <!-- Consume any message, other than EBMS3 test or EBMS3/AS4 service/test -->
    <consumption>
        <consumer className="eu.eCODEX.submission.consumer.EtrustexSubmissionConsumer">
        </consumer>
    </consumption>

