<?xml version="1.0" encoding="UTF-8"?>
<db:configuration xmlns:db="http://domibus.eu/configuration"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://domibus.eu/configuration" party="senderalias">
    <mpcs>
        <mpc name="defaultMpc"
             qualifiedName="http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/defaultMPC"
             enabled="true"
             default="true"
             retention_downloaded="0"
             retention_undownloaded="60"/>
    </mpcs>
    <businessProcesses>
        <roles>
            <role name="default"
                  value="http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/defaultRole"/>
            <role name="exampleMessageProducer"
                  value="exampleMessageProducer"/>
            <role name="exampleMessageReceiver"
                  value="exampleMessageReceiver"/>
        </roles>
        <parties>
            <partyIdTypes>
                <partyIdType name="exampleType" value="http://www.domibus.eu/exampleType"/>
            </partyIdTypes>
            <party name="receiveralias"
                   endpoint="http://localhost:8080/domibus/services/msh"
                   senderErrorsTo="http://localhost:9090/errorhandling"
                   receiverErrorsTo="http://localhost:9090/errorhandling">
                <identifier partyId="receiveraliasId" partyIdType="exampleType"/>
            </party>
            <party name="senderalias"
                   endpoint="http://YOUR_IP:8080/domibus/services/msh"
                   senderErrorsTo="http://YOUR_IP:9190/errorhandling"
                   receiverErrorsTo="http://YOUR_IP:9190/errorhandling">
                <identifier partyId="senderaliasId" partyIdType="exampleType"/>
            </party>
        </parties>
        <meps>
            <mep name="oneway" value="http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/oneWay"/>
            <binding name="push" value="http://docs.oasis-open.org/ebxml-msg/ebms/v3.0/ns/core/200704/push"/>
        </meps>
        <properties>
            <property name="originalSenderProperty"
                      key="originalSender"
                      datatype="string"
                      required="true"/>
            <property name="finalRecipientProperty"
                      key="finalRecipient"
                      datatype="string"
                      required="true"/>
            <propertySet name="ecodexPropertySet">
                <propertyRef property="finalRecipientProperty"/>
                <propertyRef property="originalSenderProperty"/>
            </propertySet>
        </properties>
        <payloadProfiles>
            <payload name="businessContentInBody"
                     cid=""
                     required="false"
                     mimeType="text/xml"/>
            <payload name="businessContentAsAttachment"
                     cid="businessDocement@e-codex.eu"
                     required="false"
                     mimeType="text/xml"/>
            <payload name="submissionAcceptanceEvidence"
                     cid="submissionAcceptance@e-codex.eu"
                     required="false"
                     mimeType="text/xml"/>
        </payloadProfiles>
        <securities>
            <security name="exampleSecurity"
                      policy="encryptAll.xml"
                      signatureMethod="RSA_SHA256"/>
        </securities>
        <errorHandlings>
            <errorHandling name="ecodexErrorHandling"
                           errorAsResponse="true"
                           businessErrorNotifyProducer="true"
                           businessErrorNotifyConsumer="true"
                           deliveryFailureNotifyProducer="true"/>
        </errorHandlings>
        <agreements>
            <agreement name="exampleAgreement" value="http://domibus.eu/agreement"/>
        </agreements>
        <services>
            <service name="as4Service" value="AS4" type="exampleService"/>
        </services>
        <actions>
            <action name="sendMessage" value="SendMessage"/>
            <action name="sendMessageCompression" value="SendMessageCompression"/>
        </actions>
        <as4>
            <receptionAwareness name="exampleReceptionAwarenessRetryThreeDuplicateDetectionFalse" retry="1;6;CONSTANT"
                                duplicateDetection="false"/>
            <receptionAwareness name="exampleReceptionAwarenessRetryThreeDuplicateDetectionTrue" retry="1;6;CONSTANT"
                                duplicateDetection="true"/>
            <reliability name="exampleReliabilityNonrepudiationFalseReplypatternResponse" nonRepudiation="false"
                         replyPattern="response"/>
            <reliability name="exampleReliabilityNonrepudiationTrueReplypatternResponse" nonRepudiation="true"
                         replyPattern="response"/>
        </as4>
        <legConfigurations>
            <legConfiguration name="examplePushLegOne"
                              service="as4Service"
                              action="sendMessage"
                              defaultMpc="defaultMpc"
                              reliability="exampleReliabilityNonrepudiationTrueReplypatternResponse"
                              security="exampleSecurity"
                              receptionAwareness="exampleReceptionAwarenessRetryThreeDuplicateDetectionTrue"
                              propertySet="ecodexPropertySet"
                              payloadProfile="ecodexMessageProfile"
                              errorHandling="ecodexErrorHandling"
                              compressPayloads="false">
                <countryMpc country="receiveralias" mpc="defaultMpc"/>
                <countryMpc country="senderalias" mpc="defaultMpc"/>
            </legConfiguration>
            <legConfiguration name="examplePushLegOneNoNonRepudiationCompressionTrue"
                              service="as4Service"
                              action="sendMessageCompression"
                              defaultMpc="defaultMpc"
                              reliability="exampleReliabilityNonrepudiationTrueReplypatternResponse"
                              security="exampleSecurity"
                              receptionAwareness="exampleReceptionAwarenessRetryThreeDuplicateDetectionTrue"
                              propertySet="ecodexPropertySet"
                              payloadProfile="ecodexMessageProfile"
                              errorHandling="ecodexErrorHandling"
                              compressPayloads="true">
                <countryMpc country="receiveralias" mpc="defaultMpc"/>
                <countryMpc country="senderalias" mpc="defaultMpc"/>
            </legConfiguration>
        </legConfigurations>
        <process name="as4exampleProcess"
                 agreement="exampleAgreement"
                 mep="oneway"
                 binding="push"
                 initiatorRole="exampleMessageProducer"
                 responderRole="exampleMessageReceiver">
            <initiatorParties>
                <initiatorParty name="receiveralias"/>
                <initiatorParty name="senderalias"/>
            </initiatorParties>
            <responderParties>
                <responderParty name="senderalias"/>
                <responderParty name="receiveralias"/>
            </responderParties>
            <legs>
                <leg name="examplePushLegOne"/>
            </legs>
        </process>
        <process name="as4exampleNoNonRepudiationCompressionTrue"
                 agreement="exampleAgreement"
                 mep="oneway"
                 binding="push"
                 initiatorRole="exampleMessageProducer"
                 responderRole="exampleMessageReceiver">
            <initiatorParties>
                <initiatorParty name="receiveralias"/>
                <initiatorParty name="senderalias"/>
            </initiatorParties>
            <responderParties>
                <responderParty name="senderalias"/>
                <responderParty name="receiveralias"/>
            </responderParties>
            <legs>
                <leg name="examplePushLegOneNoNonRepudiationCompressionTrue"/>
            </legs>
        </process>
    </businessProcesses>
</db:configuration>
