<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>tomcat-full</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory></baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>mysql:mysql-connector-java:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/cargo/installs/tomcat-${tomcat.version}/apache-tomcat-${tomcat.version}</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>work/**/*</exclude>
                <exclude>logs/**/*</exclude>
                <exclude>temp/**/*</exclude>
                <exclude>webapps/**/*</exclude>
                <exclude>conf/Catalina/**/*</exclude>
                <exclude>common/**/*</exclude>
                <exclude>LICENSE</exclude>
                <exclude>NOTICE</exclude>
                <exclude>RELEASE-NOTES</exclude>
                <exclude>RUNNING.txt</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/sql-scripts</directory>
            <outputDirectory>/sql-scripts/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/keystore</directory>
            <outputDirectory>/keystore/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/configuration</directory>
            <outputDirectory>/conf/</outputDirectory>
            <excludes>
                <exclude>domibus.filter.properties</exclude>
            </excludes>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>../domibus/domibus-config/tomcat/conf/</directory>
            <outputDirectory>/conf/</outputDirectory>
            <excludes>
                <exclude>**/pmodes/**/*</exclude>
                <exclude>**/keys/**/*</exclude>
                <exclude>**/services/**/*</exclude>
            </excludes>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>../domibus/domibus-config/tomcat/conf/domibus/services/</directory>
            <outputDirectory>/conf/domibus/services/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly</directory>
            <outputDirectory>/conf/domibus/pmodes</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../cipa-core/Implementation/java/cipa-smp-full-webapp/target/cipa-smp-full-webapp.war</source>
            <outputDirectory>webapps</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>../cipa-core/Implementation/java/cipa-dispatcher/target/cipa-dispatcher.war</source>
            <outputDirectory>webapps</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>../domibus/modules/domibus-distribution/target/domibus.war</source>
            <outputDirectory>webapps</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>../mendelson/mendelson-as2-war/target/mendelson.war</source>
            <outputDirectory>webapps</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/passwd</source>
            <outputDirectory>bin</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/test/AS2-AS4-soapui-project.xml</source>
            <outputDirectory>test</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/index.jsp</source>
            <outputDirectory>webapps/browser</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/doc/Quick start guide.pdf</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/doc/release notes_2.2.4.pdf</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>