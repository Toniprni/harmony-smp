<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>domibusapp-jboss</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory></baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/modules/com/mysql/main/</outputDirectory>
            <includes>
                <include>mysql:mysql-connector-java:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/modules/org/bouncycastle/1.50</outputDirectory>
            <includes>
                <include>org.bouncycastle:bcmail-jdk15on:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/modules/org/bouncycastle/1.50</outputDirectory>
            <includes>
                <include>org.bouncycastle:bcprov-jdk15on:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/modules/org/bouncycastle/1.50</outputDirectory>
            <includes>
                <include>org.bouncycastle:bcpkix-jdk15on:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/modules/javax/persistence/api/main</outputDirectory>
            <includes>
                <include>org.hibernate.javax.persistence:hibernate-jpa-2.1-api:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>modules/**</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/cargo/installs/jboss-as-dist-${server.version}/jboss-as-${server.version}
            </directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>bin/**</include>
                <include>bundles/**</include>
                <include>domain/**</include>
                <include>standalone/**</include>
                <include>welcome-content/**</include>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>modules/**</exclude>
                <exclude>domain/configuration/mgmt-users.properties</exclude>
                <exclude>standalone/configuration/mgmt-users.properties</exclude>
                <exclude>standalone/configuration/standalone.xml</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/jboss/domain</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/domain/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/sql-scripts</directory>
            <outputDirectory>/sql-scripts/</outputDirectory>
            <includes>
                <include>**/*mysql*.sql</include>
            </includes>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/keystore</directory>
            <outputDirectory>/certificates</outputDirectory>
            <excludes>
                <exclude>**/*.p12</exclude>
                <exclude>**/ssl-keystore.jks</exclude>
            </excludes>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/pmodes</directory>
            <outputDirectory>/pmodes</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${projectRootPath}/environment/jboss-as7/modules/eu/europa/ec/cipa/configuration/main</directory>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${domibusRootPath}/src/main/conf</directory>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main</outputDirectory>
            <includes>
                <include>**/signEncrypt.xml</include>
                <include>**/ehcache.xml</include>
                <include>**/submission-config.xml</include>
            </includes>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <files>    
        <file>
            <source>src/main/resources/jboss/standalone/configuration/mgmt-users.properties</source>
            <outputDirectory>/standalone/configuration/</outputDirectory>
            <filtered>true</filtered>
        </file>
        
        <file>
            <source>${projectRootPath}/environment/jboss-as7/standalone/configuration/standalone.xml</source>
            <outputDirectory>/standalone/configuration/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${projectRootPath}/domibus-endpoint/target/domibus-app.war</source>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${domibusRootPath}/target/domibus.war</source>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/test/BRIS-test-guide-soapui-project.xml</source>
            <outputDirectory>test</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/test/Test guide.pdf</source>
            <outputDirectory>test</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/doc/Quick start guide.pdf</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <!--<file>-->
            <!--<source>src/main/doc/Known Issues.pdf</source>-->
            <!--<outputDirectory>/</outputDirectory>-->
            <!--<filtered>false</filtered>-->
        <!--</file>-->
        <!--<file>
            <source>src/main/doc/ReleaseNotes-3.1.0.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>-->
        <file>
            <source>src/main/doc/Building Block DSI_IntroDocument (eDelivery)-v1.00.pdf</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>
