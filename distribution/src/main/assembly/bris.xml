<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bris</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory></baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/modules/com/mysql/main/</outputDirectory>
            <includes>
                <include>mysql:mysql-connector-java:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/modules/org/bouncycastle/1.50</outputDirectory>
            <includes>
                <include>org.bouncycastle:bcmail-jdk15on:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/modules/org/bouncycastle/1.50</outputDirectory>
            <includes>
                <include>org.bouncycastle:bcprov-jdk15on:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/modules/org/bouncycastle/1.50</outputDirectory>
            <includes>
                <include>org.bouncycastle:bcpkix-jdk15on:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/modules/javax/persistence/api/main</outputDirectory>
            <includes>
                <include>org.hibernate.javax.persistence:hibernate-jpa-2.1-api:jar</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
                <exclude>modules/org/apache/httpcomponents/main/module.xml</exclude>
                <exclude>modules/javax/persistence/api/main/module.xml</exclude>
            </excludes>
            <includes>
                <include>modules/**</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>
                ${project.build.directory}/cargo/installs/jboss-as-dist-${server.version}/jboss-as-${server.version}
            </directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>bin/**</include>
                <include>bundles/**</include>
                <include>domain/**</include>
                <include>standalone/**</include>
                <include>welcome-content/**</include>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>modules/**</exclude>
                <exclude>domain/configuration/mgmt-users.properties</exclude>
                <exclude>standalone/configuration/mgmt-users.properties</exclude>
                <exclude>standalone/configuration/standalone.xml</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/jboss</directory>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>**/*</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/sql-scripts</directory>
            <outputDirectory>/sql-scripts/</outputDirectory>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/keystore</directory>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <excludes>
                <exclude>**/*.p12</exclude>
                <exclude>**/ssl-keystore.jks</exclude>
            </excludes>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>../../EDELIVERY/domibus/Domibus-MSH/src/main/conf</directory>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/</outputDirectory>
            <excludes>
                <exclude>**/db/*</exclude>
                <exclude>**/doNothingPolicy.xml</exclude>
                <exclude>**/truststore.jks</exclude>
                <exclude>**/keystore.jks</exclude>
                <exclude>**/domibus-configuration.xml</exclude>
            </excludes>
            <fileMode>0444</fileMode>
            <directoryMode>0555</directoryMode>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file><source>../../EDELIVERY/domibus-3-submission/ref-backend-ws/target/submission.war</source>
        <outputDirectory>/standalone/deployments</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>../../EDELIVERY/domibus-3-submission/Domibus-MSH/target/domibus.war</source>
            <outputDirectory>/standalone/deployments</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/test/BRIS-test-guide-soapui-project.xml</source>
            <outputDirectory>test</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/test/Test_Guide.docx</source>
            <outputDirectory>test</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/doc/Quick start guide.pdf</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/doc/Known Issues.pdf</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/doc/ReleaseNotes-2.4.3.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/domibus-configuration.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/backend-common-configuration.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/submission-config.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/pmode-local.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/pmode-VM.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/encryptAll.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/signOnly.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/doNothingPolicy.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/main/resources/configuration/ehCache.xml</source>
            <outputDirectory>/modules/eu/europa/ec/cipa/configuration/main/domibus</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>
